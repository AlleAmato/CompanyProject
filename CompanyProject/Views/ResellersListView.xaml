<Page x:Class="CompanyProject.Views.ResellersListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompanyProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResellersListView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">Resellers</Label>

        <TextBox x:Name="tbBusinessName"  Grid.Column="0" Grid.Row="1" Margin="20"></TextBox>
        <TextBox x:Name="tbVAT" Grid.Column="1" Grid.Row="1"  Margin="20">VAT</TextBox>
        <ComboBox x:Name="cbCity" Grid.Column="2" Grid.Row="1" Margin="20">City</ComboBox>
        <DataGrid x:Name="ResellersList" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Margin="20" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" ResellerID " />
                <DataGridTextColumn Header=" BusinessName " />
                <DataGridTextColumn Header=" VAT " />
                <DataGridTextColumn Header=" Address" />
                <DataGridTextColumn Header=" City " />
                <DataGridTextColumn Header=" PostalCode " />
                <DataGridTextColumn Header=" Mail " />
                <DataGridTextColumn Header=" Telephone " />
            </DataGrid.Columns>
        </DataGrid>
        
        
    </Grid>
</Page>
