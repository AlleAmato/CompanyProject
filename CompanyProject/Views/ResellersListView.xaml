<Page x:Class="CompanyProject.Views.ResellersListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompanyProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResellersListView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">Resellers</Label>
        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="1" HorizontalAlignment="Center">Select by business name:</Label>
        <TextBox x:Name="tbBusinessName"  Grid.Column="0" Grid.Row="1" Margin="22" Text="{Binding BuisnessName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="1" HorizontalAlignment="Center">Select by VAT:</Label>
        <TextBox x:Name="tbVAT"  Grid.Column="1" Grid.Row="1"  Margin="22" Text="{Binding VAT, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Margin="1" HorizontalAlignment="Center">Select by city:</Label>
        <ComboBox x:Name="cbCity" Grid.Column="2" Grid.Row="1" Margin="22" ItemsSource="{Binding ListCity}" SelectedItem = "{Binding SelectedCity}"></ComboBox>
        <Button x:Name="bResetFiltersRL" Grid.Column="3" Grid.Row="1" Margin="20">ResetFilters</Button>
        <DataGrid x:Name="ResellersList" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" Margin="20" AutoGenerateColumns="False"
                  ItemsSource="{Binding ListResellers}" SelectedItem="{Binding SelectedReseller}">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" ResellerID " />
                <DataGridTextColumn Header=" BusinessName " />
                <DataGridTextColumn Header=" VAT " />
                <DataGridTextColumn Header=" Address" />
                <DataGridTextColumn Header=" City " />
                <DataGridTextColumn Header=" PostalCode " />
                <DataGridTextColumn Header=" Mail " />
                <DataGridTextColumn Header=" Telephone " />
            </DataGrid.Columns>
        </DataGrid>
        
        
    </Grid>
</Page>
